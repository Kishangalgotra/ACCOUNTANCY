<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeconstraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:foregroundTint="#F2F2F2"
    tools:context=".HomeActivity">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/Basic"
                style="@android:style/Widget.Material.Light.TextView.SpinnerItem"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@drawable/button_layout"
                android:clickable="true"
                android:fontFamily="sans-serif-thin"
                android:gravity="center|start|fill|fill_horizontal|left"
                android:lineSpacingExtra="12sp"
                android:onClick="nextbasic"
                android:padding="20dp"
                android:text="BASICS"
                android:textSize="18sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/theory"
                style="@android:style/Widget.Material.Light.TextView.SpinnerItem"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@drawable/button_layout"
                android:fontFamily="sans-serif-thin"
                android:gravity="center|start|fill|fill_horizontal|left"
                android:lineSpacingExtra="12sp"
                android:padding="20dp"
                android:text="Theory Base of Accounting"
                android:textSize="18sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/recording"
                style="@android:style/Widget.Material.Light.TextView.SpinnerItem"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@drawable/button_layout"
                android:fontFamily="sans-serif-thin"
                android:gravity="center|start|fill|fill_horizontal|left"
                android:lineSpacingExtra="12sp"
                android:padding="20dp"
                android:text="Recording of Transactions - I"
                android:textSize="18sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/recording2"
                style="@android:style/Widget.Material.Light.TextView.SpinnerItem"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@drawable/button_layout"
                android:fontFamily="sans-serif-thin"
                android:gravity="center|start|fill|fill_horizontal|left"
                android:lineSpacingExtra="12sp"
                android:padding="20dp"
                android:text="Recording of Transactions - II"
                android:textSize="18sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/bank"
                style="@android:style/Widget.Material.Light.TextView.SpinnerItem"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@drawable/button_layout"
                android:fontFamily="sans-serif-thin"
                android:gravity="center|start|fill|fill_horizontal|left"
                android:lineSpacingExtra="12sp"
                android:padding="20dp"
                android:text="Bank Reconciliation Statement"
                android:textSize="18sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/trial"
                style="@android:style/Widget.Material.Light.TextView.SpinnerItem"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@drawable/button_layout"
                android:fontFamily="sans-serif-thin"
                android:gravity="center|start|fill|fill_horizontal|left"
                android:lineSpacingExtra="12sp"
                android:padding="20dp"
                android:text="Trial Balance and Rectification of Errors"
                android:textSize="18sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/depreciation"
                style="@android:style/Widget.Material.Light.TextView.SpinnerItem"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@drawable/button_layout"
                android:fontFamily="sans-serif-thin"
                android:gravity="center|start|fill|fill_horizontal|left"
                android:lineSpacingExtra="12sp"
                android:padding="20dp"
                android:text="Depreciation, Provisions and Reserves"
                android:textSize="18sp"
                android:typeface="serif" />

            <TextView
                android:id="@+id/bill"
                style="@android:style/Widget.Material.Light.TextView.SpinnerItem"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="@drawable/button_layout"
                android:fontFamily="sans-serif-thin"
                android:gravity="center|start|fill|fill_horizontal|left"
                android:lineSpacingExtra="12sp"
                android:padding="20dp"
                android:text="Bill of Exchange"
                android:textSize="18sp"
                android:typeface="serif" />
        </LinearLayout>
    </ScrollView>
