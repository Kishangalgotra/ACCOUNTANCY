<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Meaning_of_Accounting">


    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="403dp"
        android:layout_height="727dp"
        android:layout_marginTop="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linerlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/MOA_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_semibold"
                android:inputType="none"
                android:lineSpacingExtra="8sp"
                android:outlineProvider="paddedBounds"
                android:padding="22dp"
                android:singleLine="false"
                android:text="@string/MOA_textview"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/chart" />

            <TextView
                android:id="@+id/MOA_textview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_semibold"
                android:inputType="none"
                android:lineSpacingExtra="8sp"
                android:outlineProvider="paddedBounds"
                android:padding="22dp"
                android:singleLine="false"
                android:text="@string/MOA_textview2"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/MOA_textview3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_semibold"
                android:inputType="none"
                android:lineSpacingExtra="8sp"
                android:outlineProvider="paddedBounds"
                android:padding="22dp"
                android:singleLine="false"
                android:text="@string/MOA_1.1.1"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/MOA_textview4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_semibold"
                android:inputType="none"
                android:lineSpacingExtra="8sp"
                android:outlineProvider="paddedBounds"
                android:padding="22dp"
                android:singleLine="false"
                android:text="@string/MOA_1.1.2"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/MOA_textview5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_semibold"
                android:inputType="none"
                android:lineSpacingExtra="8sp"
                android:outlineProvider="paddedBounds"
                android:padding="22dp"
                android:singleLine="false"
                android:text="@string/MOA_1.1.3"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/MOA_textview6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_semibold"
                android:inputType="none"
                android:lineSpacingExtra="8sp"
                android:outlineProvider="paddedBounds"
                android:padding="22dp"
                android:singleLine="false"
                android:text="@string/MOA_1.1.4"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>